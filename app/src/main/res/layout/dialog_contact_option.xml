<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/regular_view_sub_margins">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/textView6"
        style="@style/TextHeading"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/home_header_margin"
        android:text="Select Contact Option"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/button_contact_call"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/home_header_margin"
        android:background="@color/hot_yellow"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@+id/button_contact_message"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent=".15"
        app:srcCompat="@drawable/ic_baseline_local_phone_24" />

    <ImageButton
        android:id="@+id/button_contact_message"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/hot_yellow"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_contact_call"
        app:layout_constraintTop_toTopOf="@+id/button_contact_call"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent=".15"
        app:srcCompat="@drawable/ic_baseline_message_24" />

</androidx.constraintlayout.widget.ConstraintLayout>