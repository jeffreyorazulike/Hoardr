<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:padding="@dimen/view_padding">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/textView6"
            style="@style/TextStyleH5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Select Contact Option"
            android:textAlignment="center"
            app:layout_constraintBottom_toTopOf="@+id/button_contact_call"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="spread" />

        <ImageButton
            android:id="@+id/button_contact_call"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/hot_yellow"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toStartOf="@+id/button_contact_message"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent=".15"
            app:srcCompat="@drawable/ic_baseline_local_phone_24"
            app:tint="@color/text_shade_2" />

        <ImageButton
            android:id="@+id/button_contact_message"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/hot_yellow"
            app:layout_constraintBottom_toBottomOf="@+id/button_contact_call"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/button_contact_call"
            app:layout_constraintTop_toTopOf="@+id/button_contact_call"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent=".15"
            app:srcCompat="@drawable/ic_message"
            app:tint="@color/text_shade_2" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>