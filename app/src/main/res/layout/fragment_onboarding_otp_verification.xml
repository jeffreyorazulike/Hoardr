<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/textView14"
        style="@style/TextStyleH2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OTP Verification"
        app:layout_constraintBottom_toTopOf="@+id/textView15"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/textView15"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:text="Please enter the OTP sent to your phone number or email address"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/edittext_otp_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView14" />

    <EditText
        android:id="@+id/edittext_otp_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/edittext_otp_2"
        app:layout_constraintStart_toStartOf="@+id/textView15"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent=".1" />

    <EditText
        android:id="@+id/edittext_otp_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="@+id/edittext_otp_1"
        app:layout_constraintEnd_toStartOf="@+id/edittext_otp_3"
        app:layout_constraintStart_toEndOf="@+id/edittext_otp_1"
        app:layout_constraintTop_toTopOf="@+id/edittext_otp_1"
        app:layout_constraintWidth_percent=".1" />

    <EditText
        android:id="@+id/edittext_otp_3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="@+id/edittext_otp_2"
        app:layout_constraintEnd_toStartOf="@+id/edittext_otp_4"
        app:layout_constraintStart_toEndOf="@+id/edittext_otp_2"
        app:layout_constraintTop_toTopOf="@+id/edittext_otp_2"
        app:layout_constraintWidth_percent=".1" />

    <EditText
        android:id="@+id/edittext_otp_4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="@+id/edittext_otp_3"
        app:layout_constraintEnd_toEndOf="@+id/textView15"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toEndOf="@+id/edittext_otp_3"
        app:layout_constraintTop_toTopOf="@+id/edittext_otp_3"
        app:layout_constraintWidth_percent=".1" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/text_resend_otp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:text="Didn't get code? Resend OTP"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/button_otp_verify"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edittext_otp_1"
        app:layout_constraintVertical_bias="0.3" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_otp_verify"
        style="@style/Button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/view_padding"
        android:text="Verify"
        app:layout_constraintBottom_toTopOf="@+id/button_otp_cancel"
        app:layout_constraintEnd_toEndOf="@+id/button_otp_cancel"
        app:layout_constraintStart_toStartOf="@+id/button_otp_cancel" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_otp_cancel"
        style="@style/Button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/home_header_margin"
        android:layout_marginEnd="@dimen/home_header_margin"
        android:layout_marginBottom="32dp"
        android:text="Cancel"
        android:textColor="@color/black"
        app:backgroundTint="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>