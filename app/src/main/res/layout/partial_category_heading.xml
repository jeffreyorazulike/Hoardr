<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/text_category_heading"
        style="@style/TextStyleH5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Categories"
        app:layout_constraintEnd_toStartOf="@+id/text_category_view_all"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/text_category_view_all"
        style="@style/TextStyleSmall1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="View all"
        app:layout_constraintBottom_toBottomOf="@+id/text_category_heading"
        app:layout_constraintEnd_toStartOf="@+id/image_category_view_all"
        app:layout_constraintStart_toEndOf="@+id/text_category_heading"
        app:layout_constraintTop_toTopOf="@+id/text_category_heading" />

    <ImageView
        android:id="@+id/image_category_view_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/text_category_view_all"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/text_category_view_all"
        app:layout_constraintTop_toTopOf="@+id/text_category_view_all"
        app:srcCompat="@drawable/ic_baseline_keyboard_arrow_right_24"
        app:tint="@color/text_shade_5" />
</androidx.constraintlayout.widget.ConstraintLayout>